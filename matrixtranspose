rows = 3
cols = 3
matrix = []

# Input the matrix
for i in range(rows):
    row = []
    for j in range(cols):
        value = int(input(f"Element at ({i},{j}): "))
        row.append(value)
    matrix.append(row)


print("\nOriginal Matrix:")
for r in matrix:
    print(r)


transposed = []
for i in range(cols):
    new_row = []
    for j in range(rows):
        new_row.append(matrix[j][i])
    transposed.append(new_row)


print("\nTransposed Matrix:")
for row in transposed:
    print(row)
